{
  "compileOnSave": true,
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./typings"
    ],
    "outFile": "./dist/framework.js",
    "allowJs": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "./dist",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "preserve",
    "baseUrl": "",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@foxy": [
        "src"
      ],
      "@foxy/*": [
        "src/*"
      ],
      "@stories": [
        "stories"
      ],
      "@stories/*": [
        "stories/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "stories/**/*.ts",
    "stories/**/*.vue"
  ],
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "./dist/**/*"
    // This is what fixed it!
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
